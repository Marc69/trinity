#! /usr/bin/bash
##description    : Make slapd highly available
##author         : Hans Then
##email          : hans.then@clustervision

me=$(hostname | egrep -o '[[:digit:]]*' | head -n1)
let other=me==1?2:1;

cat << EOF > /etc/openldap/cv_syncrepl.conf
moduleload syncprov
serverid ${me}

overlay syncprov
syncprov-checkpoint 100 10
syncprov-sessionlog 100

syncrepl rid=${me}00
         provider=ldap://controller-${other}.cluster:389
         type=refreshAndPersist
         retry="60 +"
         searchbase="dc=local"
         scope=sub
         schemachecking=on
         bindmethod=simple
         binddn="cn=Manager,dc=local"
         credentials=system

mirrormode on

access to *
       by dn.exact="cn=Manager,dc=local" read
       by * none

EOF

if ! grep cv_syncrepl.conf /etc/openldap/slapd.conf; then
    echo "include         /etc/openldap/cv_syncrepl.conf" >> /etc/openldap/slapd.conf"
fi
systemctl restart slapd

